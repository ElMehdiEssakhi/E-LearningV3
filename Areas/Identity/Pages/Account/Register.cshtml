@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-lg p-4" style="width: 450px; border-radius: 1rem;">
        <h2 class="text-center mb-3 text-primary">Create a new account</h2>
        <p class="text-center text-muted mb-4">Join our learning platform today</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                       placeholder="name@example.com" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                       placeholder="password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                       placeholder="password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Submit -->
            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                Register
            </button>
            <div class="text-center">
                <p class="mb-0">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                       class="fw-bold text-primary text-decoration-none">
                        Login here
                    </a>
                </p>
            </div>
        </form>

        <!-- Divider -->
        <div class="text-center my-3">
            <span class="text-muted">────────  or  ────────</span>
        </div>

        <!-- External logins -->
        <section class="text-center">
            <h5 class="mb-3">Use another service</h5>

            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p class="text-muted small">
                    No external authentication services are configured.<br />
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                        Learn how to enable external providers.
                    </a>
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                      method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary w-100 mb-2"
                                name="provider" value="@provider.Name">
                            Continue with @provider.DisplayName
                        </button>
                    }
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
