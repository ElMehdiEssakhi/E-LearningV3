@model E_LearningV3.ViewModels.QuizTakeVM

<h3 class="fw-bold mb-4">Quiz</h3>

@if (TempData["QuizError"] != null)
{
    <div class="alert alert-danger">
        @TempData["QuizError"]
    </div>
}

<form asp-action="Submit" method="post">
    <input type="hidden" name="QuizId" value="@Model.QuizId" />
    <input type="hidden" name="ChapterId" value="@Model.ChapterId" />
    <input type="hidden" name="CourseId" value="@Model.CourseId" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div class="mb-4">
            <p class="fw-bold">
                @(i + 1). @Model.Questions[i].QuestionText
            </p>

            @foreach (var option in Model.Questions[i].Options)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           name="UserAnswers[@i]"
                           value="@option"
                           required />
                    <label class="form-check-label">@option</label>
                </div>
            }
        </div>
    }

    <button type="submit" class="btn btn-success btn-lg">
        Submit Quiz
    </button>
</form>
