@model IEnumerable<E_LearningV3.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<style>
    .page-header {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #667eea;
        margin: 0;
    }

    .btn-create {
        background: #48bb78;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-create:hover {
            background: #38a169;
            color: white;
        }

    .empty-state {
        background: white;
        border-radius: 8px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #4b5563;
        margin-bottom: 0.5rem;
    }

    .empty-state-text {
        color: #6b7280;
    }

    .table-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table thead {
            background: #f8f9fa;
            border-bottom: 2px solid #e5e7eb;
        }

            .table thead th {
                font-weight: 600;
                color: #2d3748;
                padding: 1rem;
                border-bottom: none;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .table tbody tr {
            border-bottom: 1px solid #e5e7eb;
        }

            .table tbody tr:hover {
                background: #f8f9ff;
            }

            .table tbody tr:last-child {
                border-bottom: none;
            }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
            color: #4b5563;
        }

    .course-id {
        color: #9ca3af;
        font-weight: 500;
    }

    .course-name {
        font-weight: 600;
        color: #2d3748;
    }

    .course-description {
        color: #6b7280;
        font-size: 0.95rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .btn-edit {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        color: white;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .btn-edit:hover {
            background: #5568d3;
            color: white;
        }

    .btn-delete {
        background: #ef4444;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        color: white;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }
</style>

<div class="page-header">
    <h1 class="page-title">My Courses</h1>
    <a asp-controller="Courses" asp-action="Create" class="btn-create">
        + Create New Course
    </a>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">📚</div>
        <h3 class="empty-state-title">No courses found</h3>
        <p class="empty-state-text">Start by creating your first course to begin teaching.</p>
        <div style="margin-top: 1.5rem;">
            <a asp-controller="Courses" asp-action="Create" class="btn-create">
                Create Your First Course
            </a>
        </div>
    </div>
}
else
{
    <div class="table-container">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Description</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="course-id">@course.CourseId</td>
                        <td class="course-name">@course.CourseName</td>
                        <td class="course-description">
                            @(course.Description.Length > 60
                                                ? course.Description.Substring(0, 60) + "..."
                                                : course.Description)
                </td>
                <td class="text-end">
                    <div class="action-buttons">
                        <a asp-controller="Courses"
                           asp-action="Edit"
                           asp-route-id="@course.CourseId"
                           class="btn-edit">
                            Edit
                        </a>
                        <a asp-controller="Courses"
                           asp-action="Delete"
                           asp-route-id="@course.CourseId"
                           class="btn-delete">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
                        }
            </tbody>
        </table>
    </div>
}
