@model IEnumerable<E_LearningV3.Models.Course>

<style>
    .page-header {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #667eea;
        margin: 0;
    }

    .empty-state {
        background: white;
        border-radius: 8px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .empty-state-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #4b5563;
        margin-bottom: 0.5rem;
    }

    .empty-state-text {
        color: #6b7280;
    }

    .course-card {
        background: white;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
    }

        .course-card:hover {
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
            border-color: #667eea;
        }

    .course-card-body {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .course-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.75rem;
    }

    .course-description {
        color: #6b7280;
        font-size: 0.95rem;
        line-height: 1.6;
        flex: 1;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .course-stats {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        border-top: 1px solid #e5e7eb;
    }

    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e5e7eb;
    }

        .stat-item:last-child {
            border-bottom: none;
        }

    .stat-label {
        color: #6b7280;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .stat-value {
        font-weight: 600;
        color: #2d3748;
    }

    .badge-students {
        background: #48bb78;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .badge-rate {
        color: #667eea;
        font-size: 0.95rem;
    }

    .course-footer {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        border-top: 1px solid #e5e7eb;
        text-align: center;
    }

    .btn-manage {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        color: white;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-block;
        width: 100%;
    }

        .btn-manage:hover {
            background: #5568d3;
            color: white;
        }
</style>

<div class="page-header">
    <h1 class="page-title">Instructor Dashboard: My Enrollments</h1>
</div>

@if (Model == null || !Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">📚</div>
        <h3 class="empty-state-title">No courses yet</h3>
        <p class="empty-state-text">You haven't created any courses yet. Start by creating your first course.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <div class="course-card">
                    <div class="course-card-body">
                        <h5 class="course-title">@course.CourseName</h5>
                        <p class="course-description">
                            @(course.Description.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)
                        </p>
                    </div>
                    <div class="course-stats">
                        <div class="stat-item">
                            <span class="stat-label">Total Students</span>
                            <span class="badge-students">@course.Enrollments.Count</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Completion Rate</span>
                            @{
                                var completed = course.Enrollments.Count(e => e.CompletionStatus == "Completed");
                                var total = course.Enrollments.Count;
                                var rate = total > 0 ? (completed * 100 / total) : 0;
                            }
                            <span class="stat-value badge-rate">@rate%</span>
                        </div>
                    </div>
                    <div class="course-footer">
                        <a asp-controller="Courses"
                           asp-action="Edit"
                           asp-route-id="@course.CourseId"
                           class="btn-manage">
                            Manage Course
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}