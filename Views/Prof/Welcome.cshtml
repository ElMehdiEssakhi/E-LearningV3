@{
    // Sets the title for the browser tab
    ViewData["Title"] = "Professor Welcome";
    string displayName = (string)ViewData["DisplayName"];
    var latest = ViewData["LatestEnrollment"] as Enrollment;
}

<style>
    .welcome-header {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .welcome-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .welcome-subtitle {
        color: #6b7280;
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .welcome-description {
        color: #4b5563;
        margin-bottom: 1.5rem;
    }

    .btn-course-management {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-course-management:hover {
            background: #5568d3;
            color: white;
        }

    .section-card {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        height: 100%;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #e5e7eb;
    }

    .quick-link-item {
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        background: #f8f9fa;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
    }

        .quick-link-item a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
        }

            .quick-link-item a:hover {
                color: #5568d3;
                text-decoration: underline;
            }

    .enrollment-card {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        border-left: 4px solid #667eea;
    }

    .enrollment-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #667eea;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .enrollment-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.75rem;
    }

    .enrollment-details {
        color: #6b7280;
        font-size: 0.95rem;
        line-height: 1.6;
    }

        .enrollment-details strong {
            color: #4b5563;
        }

    .empty-enrollment {
        color: #6b7280;
        font-style: italic;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 6px;
        border: 1px dashed #e5e7eb;
    }
</style>

<div class="welcome-header">
    <h1 class="welcome-title">Welcome, Professor @displayName!</h1>
    <p class="welcome-subtitle">Your dedicated portal for course management and student evaluation</p>
    <p class="welcome-description">Use the navigation above to access your class lists, upload materials, and manage your schedule.</p>
    <a class="btn-course-management" asp-controller="Prof" asp-action="MyCourses" role="button">
        Go to Course Management
    </a>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="section-card">
            <h3 class="section-title">Quick Links</h3>
            <div class="quick-link-item">
                <a asp-controller="Prof" asp-action="MyEnrollments">View Enrollments</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="section-card">
            <h3 class="section-title">Recent Enrollments</h3>
            @if (latest != null)
            {
                <div class="enrollment-card">
                    <div class="enrollment-label">Newest Student</div>
                    <div class="enrollment-name">@latest.Student.User.FullName</div>
                    <div class="enrollment-details">
                        Enrolled in <strong>@latest.Course.CourseName</strong>
                        on @latest.EnrollmentDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
            }
            else
            {
                <p class="empty-enrollment">No recent enrollments found.</p>
            }
        </div>
    </div>
</div>