@using E_LearningV3.Models
@{
    string displayName = (string)ViewData["DisplayName"];
    var courses = ViewData["Courses"] as List<Course>;
}

<div class="d-flex justify-content-between align-items-center mt-4">
    <h3>📘 My Courses</h3>

    <a asp-controller="Certificates"
       asp-action="MyCertificates"
       class="btn btn-success">
        🎓 My Certifications
    </a>
</div>

@if (courses == null || !courses.Any())
{
    <div class="alert alert-info">
        You are not enrolled in any courses yet.
    </div>
}
else
{
    <div class="row">
        @foreach (var course in courses)
        {
            <div class="col-md-4 mb-3">
                <a asp-controller="Student"
                   asp-action="Learn"
                   asp-route-id="@course.CourseId"
                   class="text-decoration-none">

                    <div class="card shadow-sm h-100 hover-shadow">
                        <div class="card-body">
                            <h5>@course.CourseName</h5>
                            <p class="text-muted">@course.Description</p>
                        </div>
                        <div class="card-footer text-end">
                            <span class="btn btn-sm btn-outline-primary">
                                Start Learning →
                            </span>
                        </div>
                    </div>

                </a>
            </div>
        }
    </div>
}
