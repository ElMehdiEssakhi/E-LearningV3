@model IEnumerable<E_LearningV3.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You are not enrolled in any courses yet.
    </div>
}
else
{
    <div class="list-group">
        @foreach (var course in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5>@course.CourseName</h5>
                    <p class="mb-0">@course.Description</p>
                    <p class="text-muted mb-0">
                        Taught by <strong>@(course.Professor?.User.FullName ?? course.Professor?.UserId)</strong>
                    </p>
                </div>
                <div>
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-sm btn-primary me-1">
                        Details
                    </a>
                    <a asp-controller="Enrollments" asp-action="Unenroll" asp-route-courseId="@course.CourseId" class="btn btn-sm btn-danger">
                        Unenroll
                    </a>
                </div>
            </div>
        }
    </div>
}
