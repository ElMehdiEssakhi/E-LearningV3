@model E_LearningV3.Models.Course
@{
    var selectedChapter = ViewBag.SelectedChapter as Chapter;
}

<style>
    .learn-container {
        background: #f8f9fa;
        min-height: calc(100vh - 200px);
    }

    .sidebar {
        background: white;
        border-right: 1px solid #e5e7eb;
        min-height: calc(100vh - 200px);
        padding: 1.5rem;
    }

    .sidebar-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #667eea;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #e5e7eb;
    }

    .chapter-item {
        display: block;
        padding: 0.875rem 1rem;
        margin-bottom: 0.5rem;
        border-radius: 6px;
        text-decoration: none;
        color: #4b5563;
        border: 1px solid #e5e7eb;
        background: white;
        transition: all 0.2s ease;
    }

        .chapter-item:hover {
            background: #f8f9ff;
            border-color: #667eea;
            color: #667eea;
            text-decoration: none;
        }

        .chapter-item.active {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

            .chapter-item.active:hover {
                background: #5568d3;
                color: white;
            }

    .badge-completed {
        background: #48bb78;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-left: 0.5rem;
    }

    .content-area {
        padding: 2rem;
        background: #f8f9fa;
    }

    .content-header {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .content-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2d3748;
        margin: 0;
    }

    .empty-message {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .empty-message-text {
        color: #6b7280;
        margin: 0;
    }

    .content-card {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .content-type-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #667eea;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .video-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .pdf-container {
        width: 100%;
        height: 500px;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
    }

    .text-content {
        color: #4b5563;
        line-height: 1.7;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
    }

    .action-section {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        margin-top: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        text-align: right;
    }

    .btn-quiz {
        background: #48bb78;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-quiz:hover {
            background: #38a169;
            color: white;
        }

        .btn-quiz.disabled {
            background: #9ca3af;
            cursor: not-allowed;
        }

    .btn-exam {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-exam:hover {
            background: #5568d3;
            color: white;
        }

    .btn-certificate {
        background: white;
        border: 2px solid #667eea;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: #667eea;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-certificate:hover {
            background: #f8f9ff;
            color: #667eea;
        }
</style>

<div class="learn-container">
    <div class="row g-0">
        <!-- LEFT: Chapters Sidebar -->
        <div class="col-md-3">
            <div class="sidebar">
                <h5 class="sidebar-title">📚 Chapters</h5>

                <div>
                    @foreach (var chap in Model.Chapters)
                    {
                        <a asp-action="Learn"
                           asp-route-id="@Model.CourseId"
                           asp-route-chapterId="@chap.ChapId"
                           class="chapter-item @(selectedChapter?.ChapId == chap.ChapId ? "active" : "")">
                            @chap.Title
                        </a>
                    }
                    @if (ViewBag.FinalExam != null)
                    {
                        <a asp-action="Learn"
                           asp-route-id="@Model.CourseId"
                           asp-route-examId="@ViewBag.FinalExam.ExamFinalId"
                           class="chapter-item @(ViewBag.FinalExamSelected == true ? "active" : "")">
                            🎓 Final Exam: @ViewBag.FinalExam.Title
                            @if (ViewBag.FinalExamPassed == true)
                            {
                                <span class="badge-completed"> Completed</span>
                            }
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT: Content Area -->
        <div class="col-md-9">
            <div class="content-area">
                @if (ViewBag.SelectedChapter == null && ViewBag.SelectedExam == null)
                {
                    <div class="empty-message">
                        <p class="empty-message-text">Select a chapter from the sidebar to start learning.</p>
                    </div>
                }
                else if (ViewBag.SelectedChapter != null)
                {
                    <div class="content-header">
                        <h3 class="content-title">@selectedChapter.Title</h3>
                    </div>

                    @if (selectedChapter.Contents == null || !selectedChapter.Contents.Any())
                    {
                        <div class="empty-message">
                            <p class="empty-message-text">No content available for this chapter.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var content in selectedChapter.Contents)
                        {
                            <div class="content-card">
                                <div class="content-type-label">@content.Type</div>

                                @if (content.Type == Content.ContentType.Video)
                                {
                                    <div class="video-container">
                                        <div class="ratio ratio-16x9">
                                            <iframe src="@content.ContentLink"
                                                    title="Video player"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen
                                                    style="border-radius: 6px;">
                                            </iframe>
                                        </div>
                                    </div>
                                }
                                else if (content.Type == Content.ContentType.Pdf)
                                {
                                    <iframe src="@content.ContentLink"
                                            class="pdf-container">
                                    </iframe>
                                }
                                else
                                {
                                    <div class="text-content">@content.ContentLink</div>
                                }
                            </div>
                        }
                    }

                    @if (selectedChapter.Quizzes.Any())
                    {
                        <div class="action-section">
                            @if (ViewBag.QuizPassed == true)
                            {
                                <span class="btn-quiz disabled">
                                    ✅ Completed
                                </span>
                            }
                            else
                            {
                                <a asp-controller="Quiz"
                                   asp-action="Take"
                                   asp-route-chapterId="@selectedChapter.ChapId"
                                   class="btn-quiz">
                                    Mark as Complete & Take Quiz
                                </a>
                            }
                        </div>
                    }
                }
                else if (ViewBag.SelectedExam != null)
                {
                    var exam = ViewBag.SelectedExam as ExamFinal;
                    <div class="content-header">
                        <h3 class="content-title">🎓 Final Exam: @exam.Title</h3>
                    </div>

                    <div class="action-section">
                        @if (ViewBag.FinalExamPassed == true)
                        {
                            <div>
                                <span class="btn-quiz disabled">
                                    ✅ Completed
                                </span>
                                @if (ViewBag.CertificateId != null)
                                {
                                    <a asp-controller="Certificates"
                                       asp-action="Download"
                                       asp-route-id="@ViewBag.CertificateId"
                                       class="btn-certificate">
                                        📄 Download Certificate
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <a asp-controller="ExamFinals"
                               asp-action="TakeExam"
                               asp-route-id="@exam.ExamFinalId"
                               class="btn-exam">
                                📝 Take Final Exam
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
