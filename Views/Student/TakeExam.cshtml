@model E_LearningV3.ViewModels.FinalExamViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Final Exam";
}

<style>
    /* Consistent Quiz/Exam Styling */
    body {
        background-color: #f8fafc;
    }

    .exam-header-card {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border-bottom: 4px solid #667eea; /* Exam Theme Color */
        text-align: center;
    }

    .exam-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .exam-meta {
        color: #64748b;
        font-size: 0.95rem;
    }

    /* Question Cards */
    .question-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border: 1px solid #e2e8f0;
    }

    .question-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .question-number {
        background: #e0e7ff;
        color: #4338ca;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        flex-shrink: 0;
    }

    .question-text {
        font-size: 1.15rem;
        font-weight: 600;
        color: #334155;
        line-height: 1.5;
        padding-top: 2px;
    }

    /* Answer Options */
    .options-grid {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding-left: 3rem;
    }

    /* Custom Radio Styling */
    .option-wrapper {
        position: relative;
    }

        .option-wrapper input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

    .option-label {
        display: block;
        padding: 1rem 1.25rem;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        color: #475569;
        font-weight: 500;
        position: relative;
    }

        .option-label:hover {
            background-color: #f8fafc;
            border-color: #cbd5e1;
        }

    .option-wrapper input[type="radio"]:checked + .option-label {
        border-color: #667eea;
        background-color: #eef2ff;
        color: #4338ca;
        font-weight: 600;
        box-shadow: 0 0 0 1px #667eea;
    }

        .option-wrapper input[type="radio"]:checked + .option-label::after {
            content: '✓';
            position: absolute;
            right: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
            font-weight: bold;
            color: #667eea;
        }

    /* Footer / Submit */
    .exam-footer {
        text-align: center;
        margin-top: 3rem;
        margin-bottom: 5rem;
    }

    .btn-submit-exam {
        background: #4f46e5; /* Slightly different blue for Exams */
        border: none;
        padding: 1rem 3rem;
        font-size: 1.1rem;
        border-radius: 50px;
        font-weight: 600;
        color: white;
        box-shadow: 0 4px 6px rgba(79, 70, 229, 0.3);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-submit-exam:hover {
            background: #4338ca;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(79, 70, 229, 0.4);
        }

    /* Success State */
    .success-card {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        color: #166534;
    }

    .success-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
</style>

<div class="container" style="max-width: 800px;">

    <div class="exam-header-card">
        <h1 class="exam-title">@Model.Title</h1>
        <p class="exam-meta">Final Assessment</p>
    </div>

    @if (TempData["ExamResult"] != null)
    {
        <div class="alert alert-info shadow-sm rounded-3 mb-4 border-0">
            @TempData["ExamResult"]
        </div>
    }

    @if (Model.ExamPassed == true)
    {
        <div class="success-card">
            <div class="success-icon">🏆</div>
            <h3 class="fw-bold">Congratulations!</h3>
            <p class="mb-0">You have already passed this exam.</p>
            <div class="mt-4">
                <a asp-controller="Prof" asp-action="MyEnrollments" class="btn btn-outline-success">Return to Dashboard</a>
            </div>
        </div>
    }
    else
    {
        <form asp-action="SubmitExam" method="post">
            <input type="hidden" asp-for="ExamFinalId" />

            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <div class="question-card">
                    <div class="question-header">
                        <div class="question-number">@(i + 1)</div>
                        <div class="question-text">@Model.Questions[i].QuestionText</div>
                    </div>

                    <div class="options-grid">
                        @for (int j = 0; j < Model.Questions[i].Options.Count; j++)
                        {
                            // Create a unique ID for label association
                            var uniqueId = $"q_{i}_opt_{j}";

                            <div class="option-wrapper">
                                <input class="form-check-input"
                                       type="radio"
                                       id="@uniqueId"
                                       name="Answers[@i]"
                                       value="@Model.Questions[i].Options[j]"
                                       required />

                                <label class="option-label" for="@uniqueId">
                                    @Model.Questions[i].Options[j]
                                </label>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="exam-footer">
                <button type="submit" class="btn btn-submit-exam">
                    Submit Final Exam
                </button>
            </div>
        </form>
    }
</div>