@model E_LearningV3.Models.Quiz

@{
    ViewData["Title"] = "Edit Quiz";
}

<style>
    /* Consistent Admin Panel Styling */
    .page-header {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #667eea;
        margin: 0;
    }

    .form-card {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        max-width: 800px; /* Wider for JSON editing */
        margin-bottom: 2rem;
    }

    .form-label {
        font-weight: 500;
        color: #4b5563;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.75rem;
        font-size: 0.95rem;
        width: 100%;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    /* Monospace for JSON editing */
    textarea.json-input {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.9rem;
        background-color: #f8fafc;
        color: #334155;
        min-height: 150px;
    }

    .text-danger {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .alert-danger {
        border-radius: 6px;
        background: #fee2e2;
        color: #991b1b;
        padding: 0.75rem;
        border: 1px solid #fecaca;
        margin-bottom: 1.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn-save {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-save:hover {
            background: #5568d3;
            color: white;
        }

    .btn-cancel {
        background: white;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #667eea;
            color: #667eea;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .helper-text {
        font-size: 0.85rem;
        color: #64748b;
        margin-top: 0.25rem;
        margin-bottom: 0.5rem;
    }
</style>

<div class="page-header">
    <h1 class="page-title">Edit Quiz</h1>
</div>

<div class="form-card">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" asp-for="QuizId" />
        <input type="hidden" asp-for="ChapId" /> <div class="form-group">
            <label asp-for="Title" class="form-label">Quiz Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter quiz title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuestionsJson" class="form-label">Questions (JSON)</label>
            <div class="helper-text">Format: <code>[{"Question":"...", "Options":["A","B"]}]</code></div>
            <textarea asp-for="QuestionsJson" class="form-control json-input" rows="6"></textarea>
            <span asp-validation-for="QuestionsJson" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AnswersJson" class="form-label">Answers (JSON)</label>
            <div class="helper-text">Format: Array of correct answers (e.g. <code>["Answer 1", "Answer 2"]</code>)</div>
            <textarea asp-for="AnswersJson" class="form-control json-input" rows="4"></textarea>
            <span asp-validation-for="AnswersJson" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save Changes" class="btn-save" />

            <a asp-controller="Chapters" asp-action="Edit" asp-route-id="@Model.ChapId" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}