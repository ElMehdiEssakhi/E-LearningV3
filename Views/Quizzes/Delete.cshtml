@model E_LearningV3.Models.Quiz

@{
    ViewData["Title"] = "Delete Quiz";
}

<style>
    /* Consistent Warning/Delete Styling */
    .warning-header {
        background: #fff7ed;
        border: 2px solid #fed7aa;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .warning-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .warning-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #9a3412;
        margin-bottom: 0.5rem;
    }

    .warning-message {
        color: #7c2d12;
        font-size: 1rem;
    }

    .quiz-details-card {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        margin-bottom: 2rem;
    }

    .detail-row {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #e5e7eb;
        /* Align items to top for multi-line JSON */
        align-items: flex-start;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: #4b5563;
        width: 150px;
        flex-shrink: 0;
        padding-top: 2px; /* Slight offset for alignment */
    }

    .detail-value {
        color: #2d3748;
        flex: 1;
        word-break: break-word; /* Ensure JSON wraps */
    }

    .quiz-highlight-value {
        font-weight: 600;
        color: #667eea;
        font-size: 1.1rem;
    }

    .code-block {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.9rem;
        background-color: #f8fafc;
        padding: 0.5rem;
        border-radius: 4px;
        border: 1px solid #e2e8f0;
        display: block;
        max-height: 200px;
        overflow-y: auto;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-delete {
        background: #ef4444;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 2rem;
        color: white;
        font-weight: 500;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.2s;
    }

        .btn-delete:hover {
            background: #dc2626;
        }

    .btn-cancel {
        background: white;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.75rem 2rem;
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        transition: all 0.2s;
        display: inline-block;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #667eea;
            color: #667eea;
        }
</style>

<div class="warning-header">
    <div class="warning-icon">⚠️</div>
    <h1 class="warning-title">Delete Quiz</h1>
    <p class="warning-message">Are you sure you want to delete this quiz? All student attempts associated with it will be lost.</p>
</div>

<div class="quiz-details-card">
    <div class="detail-row">
        <div class="detail-label">@Html.DisplayNameFor(model => model.Title)</div>
        <div class="detail-value quiz-highlight-value">@Html.DisplayFor(model => model.Title)</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">@Html.DisplayNameFor(model => model.Chapter)</div>
        <div class="detail-value">
            @if (Model.Chapter != null)
            {
                @Html.DisplayFor(model => model.Chapter.Title)
            }
            else
            {
                <span class="text-muted">No Chapter Assigned</span>
            }
        </div>
    </div>

    <div class="detail-row">
        <div class="detail-label">@Html.DisplayNameFor(model => model.QuestionsJson)</div>
        <div class="detail-value">
            <span class="code-block">@Html.DisplayFor(model => model.QuestionsJson)</span>
        </div>
    </div>

    <div class="detail-row">
        <div class="detail-label">@Html.DisplayNameFor(model => model.AnswersJson)</div>
        <div class="detail-value">
            <span class="code-block">@Html.DisplayFor(model => model.AnswersJson)</span>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="QuizId" />
    <div class="form-actions">
        <button type="submit" class="btn-delete">Delete Quiz</button>
        <a asp-controller="Chapters" asp-action="Edit" asp-route-id="@Model.ChapId" class="btn-cancel">Cancel</a>
    </div>
</form>