@model E_LearningV3.Models.Quiz

@{
    ViewData["Title"] = "Create Quiz";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ChapId" /> <!-- chapter comes from route -->

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Quiz Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuestionsJson" class="control-label"></label>
                <textarea asp-for="QuestionsJson" class="form-control" rows="5" placeholder='JSON array like [{"Question":"...","Options":["..."],"Answer":"..."}]'></textarea>
                <span asp-validation-for="QuestionsJson" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnswersJson" class="control-label"></label>
                <textarea asp-for="AnswersJson" class="form-control" rows="3" placeholder='JSON array of answers'></textarea>
                <span asp-validation-for="AnswersJson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Quiz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
