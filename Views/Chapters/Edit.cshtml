@model E_LearningV3.Models.Chapter

@{
    ViewData["Title"] = "Edit Chapter";
}

<style>
    /* Unified Design System */
    .page-header {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #667eea;
        margin: 0;
    }

    .form-card, .section-card {
        background: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 1px solid #e5e7eb;
        margin-bottom: 2rem;
    }

    /* Form Specifics */
    .form-card {
        max-width: 600px;
    }

    .form-label {
        font-weight: 500;
        color: #4b5563;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.75rem;
        font-size: 0.95rem;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .text-danger {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    /* Section Headers */
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e5e7eb;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
        margin: 0;
    }

    /* Item Lists */
    .item-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .item-card {
        background: #f8f9fa;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        padding: 1rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .item-card:hover {
            background: #f0f0f0;
            border-color: #667eea;
        }

    .item-info {
        font-weight: 500;
        color: #2d3748;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .item-type-badge {
        font-size: 0.75rem;
        background: #e0e7ff;
        color: #4338ca;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-weight: 600;
        text-transform: uppercase;
        margin-right: 0.5rem;
    }

    .item-actions {
        display: flex;
        gap: 0.5rem;
    }

    /* Buttons */
    .btn-save {
        background: #667eea;
        border: none;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 500;
        cursor: pointer;
    }

        .btn-save:hover {
            background: #5568d3;
            color: white;
        }

    .btn-add {
        background: #48bb78;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.25rem;
        color: white;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
    }

        .btn-add:hover {
            background: #38a169;
            color: white;
        }

    .btn-edit {
        background: #f59e0b;
        color: white;
        text-decoration: none;
        padding: 0.4rem 0.9rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .btn-edit:hover {
            background: #d97706;
            color: white;
        }

    .btn-delete {
        background: #ef4444;
        color: white;
        text-decoration: none;
        padding: 0.4rem 0.9rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

    .btn-cancel {
        background: white;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.75rem 1.5rem;
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #667eea;
            color: #667eea;
        }

    .empty-message {
        color: #6b7280;
        font-style: italic;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 6px;
        border: 1px dashed #e5e7eb;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }
</style>

<div class="page-header">
    <h1 class="page-title">Edit Chapter</h1>
</div>

<div class="form-card">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

        <input type="hidden" asp-for="ChapId" />

        <div class="form-group">
            <label asp-for="Title" class="form-label">Chapter Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseId" class="form-label">Assigned Course</label>
            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save Chapter" class="btn-save" />
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>

<div class="section-card">
    <div class="section-header">
        <h3 class="section-title">Contents</h3>
        <a asp-controller="Contents" asp-action="Create" asp-route-chapId="@Model.ChapId" class="btn-add">
            + Add New Content
        </a>
    </div>

    @if (Model.Contents != null && Model.Contents.Any())
    {
        <div class="item-list">
            @foreach (var content in Model.Contents)
            {
                <div class="item-card">
                    <div class="item-info">
                        <span class="item-type-badge">@content.Type</span>
                        <span>@content.ContentLink</span>
                    </div>
                    <div class="item-actions">
                        <a asp-controller="Contents" asp-action="Edit" asp-route-id="@content.ContentId" class="btn-edit">Edit</a>
                        <a asp-controller="Contents" asp-action="Delete" asp-route-id="@content.ContentId" class="btn-delete">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="empty-message">No contents yet. Click "Add New Content" to start building this chapter.</p>
    }
</div>

<div class="section-card">
    <div class="section-header">
        <h3 class="section-title">Quizzes</h3>
        <a asp-controller="Quizzes" asp-action="Create" asp-route-chapId="@Model.ChapId" class="btn-add">
            + Add New Quiz
        </a>
    </div>

    @if (Model.Quizzes != null && Model.Quizzes.Any())
    {
        <div class="item-list">
            @foreach (var quiz in Model.Quizzes)
            {
                <div class="item-card">
                    <div class="item-info">@quiz.Title</div>
                    <div class="item-actions">
                        <a asp-controller="Quizzes" asp-action="Edit" asp-route-id="@quiz.QuizId" class="btn-edit">Edit</a>
                        <a asp-controller="Quizzes" asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn-delete">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="empty-message">No quizzes yet. Click "Add New Quiz" to create one.</p>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}