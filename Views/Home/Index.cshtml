@{
    ViewData["Title"] = "Home Page";
}

<div class="px-4 py-5 my-5 text-center">
    <div class="mb-4">
        <span class="display-1">🎓</span>
    </div>

    <h1 class="display-5 fw-bold text-dark">Welcome to E_Learning</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4 text-muted">
            The best place to master new skills. Access high-quality courses, expert instructors,
            and advance your career from the comfort of your home.
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-area="Identity" asp-page="/Account/ChooseRole" class="btn btn-primary btn-lg px-4 gap-3 rounded-pill">
                    Get Started
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                    Log In
                </a>
        </div>
    </div>
</div>

<div class="container px-4 py-5" id="features">
    <h2 class="pb-2 border-bottom text-center mb-5">Why Choose Us?</h2>

    <div class="row g-4 py-3 row-cols-1 row-cols-lg-3">

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="display-6 text-primary mb-3">🚀</div>
                    <h3 class="fs-4 fw-bold">Fast Learning</h3>
                    <p class="text-muted">Concise and effective modules designed to get you up to speed quickly.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="display-6 text-success mb-3">👨‍🏫</div>
                    <h3 class="fs-4 fw-bold">Expert Tutors</h3>
                    <p class="text-muted">Learn from industry professionals with real-world experience.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="display-6 text-info mb-3">📜</div>
                    <h3 class="fs-4 fw-bold">Certification</h3>
                    <p class="text-muted">Earn certificates upon completion to showcase your new skills.</p>
                </div>
            </div>
        </div>

    </div>
</div>