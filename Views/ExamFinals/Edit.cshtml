@model E_LearningV3.Models.ExamFinal

<h1>Edit Exam Final</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ExamFinalId" />
            <input type="hidden" asp-for="CourseId" value="@ViewBag.SelectedCourseId" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuestionsJson" class="control-label"></label>
                <textarea asp-for="QuestionsJson" class="form-control" rows="5"></textarea>
                <span asp-validation-for="QuestionsJson" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnswersJson" class="control-label"></label>
                <textarea asp-for="AnswersJson" class="form-control" rows="5"></textarea>
                <span asp-validation-for="AnswersJson" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsLocked" /> @Html.DisplayNameFor(model => model.IsLocked)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
