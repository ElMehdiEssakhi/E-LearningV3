@model E_LearningV3.Models.Content

@{
    ViewData["Title"] = "Create Content";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ChapId" /> <!-- bind ChapId from route -->

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.TypeList"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContentLink" class="control-label"></label>
                <input asp-for="ContentLink" class="form-control" placeholder="URL or Text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save Content" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
